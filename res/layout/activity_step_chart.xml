<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/sample_activity"
              android:layout_width="match_parent"
			  android:layout_height="match_parent"
              >
 
   "
    	
    
    <com.androidplot.xy.XYPlot
            android:id="@+id/mySimpleXYPlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            
            androidPlot.title=""
            androidPlot.domainLabel=""
            androidPlot.rangeLabel="Steps Taken (000s)"
            androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"
            androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
            androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
            androidPlot.domainLabelWidget.labelPaint.color="#00000000"
            androidPlot.rangeLabelWidget.labelPaint.color= "WHITE"
            androidPlot.ticksPerRangeLable= "2"
            androidPlot.titleWidget.labelPaint.color = "WHITE"
 
            androidPlot.graphWidget.marginTop="5dp"
            androidPlot.graphWidget.marginLeft="5dp"
            androidPlot.graphWidget.marginBottom="5dp"
            androidPlot.graphWidget.marginRight="5dp"
            
            androidPlot.graphWidget.backgroundColor= "WHITE"
            androidPlot.graphWidget.backgroundPaint.color= "WHITE"
            androidPlot.graphWidget.gridBackgroundPaint.color= "WHITE"
            androidPlot.graphWidget.domainGridLinePaint.color= "BLACK"
			androidPlot.graphWidget.rangeGridLinePaint.color= "BLACK"
			androidPlot.graphWidget.domainOriginLinePaint.color= "BLACK"
			androidPlot.graphWidget.rangeOriginLinePaint.color= "BLACK"
			androidPlot.graphWidget.domainLabelPaint.color= "WHITE"
			androidPlot.graphWidget.rangeLabelPaint.color= "BLACK"
            
            androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
            androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
            androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
            androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size"
            
            androidPlot.legendWidget.textPaint.textSize="@dimen/legend_text_font_size"
            androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="0dp"
            androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="0dp"
            androidPlot.legendWidget.heightMetric.value="0dp"
            androidPlot.legendWidget.positionMetrics.anchor="right_bottom"
            			
            		
            />
    	
</LinearLayout>
